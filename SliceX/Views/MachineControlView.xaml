<UserControl x:Class="SliceX.Views.MachineControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Enhanced GroupBox Style -->
        <Style x:Key="EnhancedGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2a2a2a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="#242424" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                                </Border.Effect>
                            </Border>
                            <StackPanel>
                                <Border Background="#00d4ff" Height="3" CornerRadius="2,2,0,0" 
                                        HorizontalAlignment="Stretch" Margin="0,0,0,0"/>
                                <TextBlock Text="{TemplateBinding Header}" 
                                          FontSize="15" FontWeight="SemiBold"
                                          Foreground="#00d4ff" 
                                          Margin="15,12,15,10"/>
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Control Button Style -->
        <Style x:Key="ControlButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Hint Text Style -->
        <Style x:Key="HintText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="Margin" Value="0,3,0,0"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25,20">
        <StackPanel MaxWidth="1200">

            <!-- Header -->
            <TextBlock Text="Machine Control" FontSize="24" FontWeight="Bold" 
                       Foreground="White" Margin="0,0,0,25"/>

            <!-- Quick Actions Panel -->
            <Border Background="#242424" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Content="âš¡ Enable Motors" 
                            Command="{Binding EnableMotorsCommand}" 
                            Style="{StaticResource ControlButton}"
                            Background="#28a745" Margin="0,0,10,0"/>
                    <Button Grid.Column="1" Content="â¹ Disable Motors" 
                            Command="{Binding DisableMotorsCommand}" 
                            Style="{StaticResource ControlButton}"
                            Background="#dc3545" Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column -->
                <StackPanel Grid.Column="0">
                    
                    <!-- Z Axis Control -->
                    <GroupBox Header="Z Axis Control" Style="{StaticResource EnhancedGroupBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#2d2d30" CornerRadius="6" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="FAST RATE" Style="{StaticResource FieldLabel}" 
                                               FontWeight="Bold"/>
                                    <TextBox Text="{Binding ZRateFast}" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Height="36" Margin="0,0,0,5"/>
                                    <TextBlock Text="Default: 3000 mm/min" Style="{StaticResource HintText}"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" Background="#2d2d30" CornerRadius="6" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="SLOW RATE" Style="{StaticResource FieldLabel}" 
                                               FontWeight="Bold"/>
                                    <TextBox Text="{Binding ZRateSlow}" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Height="36" Margin="0,0,0,5"/>
                                    <TextBlock Text="Default: 100 mm/min" Style="{StaticResource HintText}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </GroupBox>

                    <!-- Homing Controls -->
                    <GroupBox Header="Homing Controls" Style="{StaticResource EnhancedGroupBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="0" Content="âŒ‚ X" 
                                    Command="{Binding HomeXCommand}" 
                                    Style="{StaticResource ControlButton}" Margin="0,0,5,0"/>
                            <Button Grid.Column="1" Content="âŒ‚ Y" 
                                    Command="{Binding HomeYCommand}" 
                                    Style="{StaticResource ControlButton}" Margin="5,0,5,0"/>
                            <Button Grid.Column="2" Content="âŒ‚ Z" 
                                    Command="{Binding HomeZCommand}" 
                                    Style="{StaticResource ControlButton}" Margin="5,0,5,0"/>
                            <Button Grid.Column="3" Content="âŒ‚ ALL" 
                                    Command="{Binding HomeAllCommand}" 
                                    Style="{StaticResource ControlButton}" 
                                    Background="#00d4ff" Margin="5,0,0,0"/>
                        </Grid>
                    </GroupBox>

                    <!-- Toolhead 0 -->
                    <GroupBox Header="Toolhead 0 (Extruder)" Style="{StaticResource EnhancedGroupBox}">
                        <Border Background="#2d2d30" CornerRadius="6" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <Button Content="â–² Extrude" Command="{Binding ExtrudeTool0Command}" 
                                            Style="{StaticResource ControlButton}" 
                                            Background="#28a745" Margin="0,0,0,10"/>
                                    <TextBlock Text="DISTANCE (mm)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding ExtrudeDistance0}" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Height="36" Margin="0,0,0,5"/>
                                    <TextBlock Text="Default: 10 mm" Style="{StaticResource HintText}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <Button Content="â–¼ Reverse" Command="{Binding ReverseTool0Command}" 
                                            Style="{StaticResource ControlButton}" 
                                            Background="#dc3545" Margin="0,0,0,10"/>
                                    <TextBlock Text="RATE (mm/min)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding ReverseRate0}" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Height="36" Margin="0,0,0,5"/>
                                    <TextBlock Text="Default: 100 mm/min" Style="{StaticResource HintText}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </GroupBox>

                    <!-- Toolhead 1 -->
                    <GroupBox Header="Toolhead 1 (Extruder)" Style="{StaticResource EnhancedGroupBox}">
                        <Border Background="#2d2d30" CornerRadius="6" Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <Button Content="â–² Extrude" Command="{Binding ExtrudeTool1Command}" 
                                            Style="{StaticResource ControlButton}" 
                                            Background="#28a745" Margin="0,0,0,10"/>
                                    <TextBlock Text="DISTANCE (mm)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding ExtrudeDistance1}" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Height="36" Margin="0,0,0,5"/>
                                    <TextBlock Text="Default: 10 mm" Style="{StaticResource HintText}"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <Button Content="â–¼ Reverse" Command="{Binding ReverseTool1Command}" 
                                            Style="{StaticResource ControlButton}" 
                                            Background="#dc3545" Margin="0,0,0,10"/>
                                    <TextBlock Text="RATE (mm/min)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding ReverseRate1}" 
                                             Style="{StaticResource ModernTextBox}" 
                                             Height="36" Margin="0,0,0,5"/>
                                    <TextBlock Text="Default: 100 mm/min" Style="{StaticResource HintText}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </GroupBox>

                </StackPanel>

                <!-- Right Column -->
                <StackPanel Grid.Column="2">
                    
                    <!-- GCode Communication -->
                    <GroupBox Header="GCode Communication" Style="{StaticResource EnhancedGroupBox}">
                        <StackPanel>
                            <TextBlock Text="COMMAND TO SEND" Style="{StaticResource FieldLabel}" 
                                       FontWeight="Bold"/>
                            <TextBox Text="{Binding GCodeToSend}" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Height="80" TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Consolas" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="SENT COMMAND" Style="{StaticResource FieldLabel}" 
                                       FontWeight="Bold"/>
                            <Border Background="#2d2d30" BorderBrush="#3f3f46" BorderThickness="1" 
                                    CornerRadius="4" Padding="8" Margin="0,0,0,15">
                                <TextBlock Text="{Binding SentGCode}" Foreground="#00d4ff" 
                                           FontFamily="Consolas" TextWrapping="Wrap"/>
                            </Border>
                            
                            <Button Content="â–¶ Send Command" Command="{Binding SendGCodeCommand}" 
                                    Style="{StaticResource PrimaryButton}" 
                                    Height="44" FontSize="13" FontWeight="SemiBold"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Projector Control -->
                    <GroupBox Header="Projector Control" Style="{StaticResource EnhancedGroupBox}">
                        <StackPanel>
                            <!-- Primary Controls -->
                            <UniformGrid Rows="2" Columns="2" Margin="0,0,0,15">
                                <Button Content="ðŸ‘ Show" Command="{Binding ShowProjectorCommand}" 
                                        Style="{StaticResource ControlButton}" 
                                        Background="#28a745" Margin="0,0,5,5"/>
                                <Button Content="âš« Hide" Command="{Binding HideProjectorCommand}" 
                                        Style="{StaticResource ControlButton}" 
                                        Background="#6c757d" Margin="5,0,0,5"/>
                                <Button Content="ðŸ–¥ Connect" Command="{Binding ConnectMonitorCommand}" 
                                        Style="{StaticResource ControlButton}" 
                                        Margin="0,5,5,0"/>
                                <Button Content="â¬œ Blank" Command="{Binding ShowBlankCommand}" 
                                        Style="{StaticResource ControlButton}" 
                                        Margin="5,5,0,0"/>
                            </UniformGrid>
                            
                            <Separator Background="#3f3f46" Margin="0,5,0,15"/>
                            
                            <!-- Command Input -->
                            <TextBlock Text="CUSTOM COMMANDS" Style="{StaticResource FieldLabel}" 
                                       FontWeight="Bold"/>
                            <TextBox Text="{Binding ProjectorCommands}" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Height="60" TextWrapping="Wrap"
                                     FontFamily="Consolas" Margin="0,0,0,15"/>
                            
                            <!-- Command Actions -->
                            <UniformGrid Rows="1" Columns="3">
                                <Button Content="âœ Edit" Command="{Binding EditCommandsCommand}" 
                                        Style="{StaticResource ModernButton}" 
                                        Height="36" Margin="0,0,5,0"/>
                                <Button Content="â–¶ Send" Command="{Binding SendProjectorCommand}" 
                                        Style="{StaticResource ModernButton}" 
                                        Height="36" Margin="5,0,5,0" Background="#007bff"/>
                                <Button Content="âœ• Clear" Command="{Binding ClearProjectorCommand}" 
                                        Style="{StaticResource ModernButton}" 
                                        Height="36" Margin="5,0,0,0" Background="#dc3545"/>
                            </UniformGrid>
                        </StackPanel>
                    </GroupBox>

                </StackPanel>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</UserControl>