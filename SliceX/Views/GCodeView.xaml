<UserControl x:Class="SliceX.Views.GCodeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1e1e1e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="ðŸ“„ Generated G-Code" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalLayers, StringFormat=' - {0} layers'}" 
                           Foreground="#00d4ff" FontSize="14" FontWeight="Bold" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- G-Code Content -->
        <Border Grid.Row="1" Background="#252526" Margin="10" CornerRadius="5">
            <TextBox x:Name="GCodeTextBox" 
                     Text="{Binding GeneratedGCode, Mode=OneWay}"
                     Background="Transparent" 
                     Foreground="White" 
                     BorderThickness="0" 
                     Padding="15"
                     FontFamily="Consolas" 
                     FontSize="11"
                     VerticalScrollBarVisibility="Auto" 
                     HorizontalScrollBarVisibility="Auto"
                     IsReadOnly="True" 
                     TextWrapping="NoWrap"
                     Cursor="Arrow"/>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="#252526" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ“‹ Copy G-Code" 
                        Command="{Binding CopyGCodeCommand}"
                        Style="{StaticResource ModernButton}"
                        Margin="5" 
                        Padding="15,8"/>
                <Button Content="ðŸ’¾ Save to File" 
                        Command="{Binding SaveGCodeCommand}"
                        Style="{StaticResource ModernButton}"
                        Margin="5" 
                        Padding="15,8"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>