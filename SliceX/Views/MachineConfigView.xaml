<UserControl x:Class="SliceX.Views.MachineConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             Background="#1a1a1a">

    <UserControl.Resources>
        <!-- Enhanced GroupBox Style -->
        <Style x:Key="EnhancedGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#2a2a2a"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="#242424" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="10" ShadowDepth="2"/>
                                </Border.Effect>
                            </Border>
                            <StackPanel>
                                <Border Background="#00d4ff" Height="3" CornerRadius="2,2,0,0" 
                                        HorizontalAlignment="Stretch" Margin="0,0,0,0"/>
                                <TextBlock Text="{TemplateBinding Header}" 
                                          FontSize="15" FontWeight="SemiBold"
                                          Foreground="#00d4ff" 
                                          Margin="15,12,15,10"/>
                                <ContentPresenter Margin="{TemplateBinding Padding}"/>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#00d4ff"/>
            <Setter Property="Margin" Value="0,10,0,8"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#b0b0b0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="25,20">
        <StackPanel MaxWidth="1200">

            <!-- Header -->
            <TextBlock Text="Machine Configuration" FontSize="24" FontWeight="Bold" 
                       Foreground="White" Margin="0,0,0,25"/>

            <!-- Profile Management Section -->
            <GroupBox Header="Profile Management" Style="{StaticResource EnhancedGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Active Profile -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="ACTIVE PROFILE" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding MachineProfiles}" 
                                  SelectedItem="{Binding SelectedMachineProfile}"
                                  Background="#2d2d30" Foreground="White" 
                                  BorderBrush="#3f3f46" Height="36"
                                  FontSize="13" Padding="10,0"/>
                    </StackPanel>

                    <!-- Profile Actions -->
                    <StackPanel Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="ï¼‹ Create" Command="{Binding CreateMachineProfileCommand}" 
                                    Style="{StaticResource ModernButton}" 
                                    Margin="0,0,8,0" Padding="12,8" Height="36"/>
                            <Button Content="âœ• Delete" Command="{Binding DeleteMachineProfileCommand}" 
                                    Style="{StaticResource ModernButton}" 
                                    Padding="12,8" Height="36" Background="#dc3545"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- All Profiles List -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0">
                        <TextBlock Text="ALL CONFIGURED PROFILES" Style="{StaticResource FieldLabel}"/>
                        <ListBox ItemsSource="{Binding AllMachineProfiles}" 
                                 Background="#2d2d30" Foreground="White"
                                 BorderBrush="#3f3f46" BorderThickness="1"
                                 Height="100" Padding="8"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Machine Configuration Section -->
            <GroupBox Header="Machine Configuration" Style="{StaticResource EnhancedGroupBox}">
                <StackPanel>
                    <!-- Machine Type -->
                    <Grid Margin="0,0,0,25">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Background="#2d2d30" Padding="12,8" 
                                CornerRadius="4" VerticalAlignment="Center">
                            <TextBlock Text="NullMachine" Foreground="#00d4ff" 
                                       FontWeight="SemiBold" FontSize="13"/>
                        </Border>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="MACHINE TYPE" Style="{StaticResource FieldLabel}"/>
                            <ComboBox ItemsSource="{Binding MachineTypes}" 
                                      SelectedItem="{Binding SelectedMachineType}"
                                      Background="#2d2d30" Foreground="White" 
                                      BorderBrush="#3f3f46" Height="36" Padding="10,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Axis Configuration -->
                    <TextBlock Text="AXIS CONFIGURATION" Style="{StaticResource SectionHeader}"/>
                    
                    <Border Background="#2d2d30" CornerRadius="6" Padding="15" Margin="0,5,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="15"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Headers -->
                            <TextBlock Text="AXIS" Grid.Row="0" Grid.Column="0" 
                                       Style="{StaticResource FieldLabel}" FontWeight="Bold"/>
                            <TextBlock Text="LENGTH (mm)" Grid.Row="0" Grid.Column="1" 
                                       Style="{StaticResource FieldLabel}" FontWeight="Bold" Margin="8,0,0,0"/>
                            <TextBlock Text="MAX FEED RATE (mm/m)" Grid.Row="0" Grid.Column="2" 
                                       Style="{StaticResource FieldLabel}" FontWeight="Bold" Margin="8,0,0,0"/>
                            <TextBlock Text="DRIVER" Grid.Row="0" Grid.Column="3" 
                                       Style="{StaticResource FieldLabel}" FontWeight="Bold" Margin="8,0,0,0"/>
                            <TextBlock Text="CONNECTION" Grid.Row="0" Grid.Column="4" 
                                       Style="{StaticResource FieldLabel}" FontWeight="Bold" Margin="8,0,0,0"/>

                            <!-- X Axis -->
                            <Border Grid.Row="2" Grid.Column="0" Background="#00d4ff" 
                                    CornerRadius="3" Padding="8,6" HorizontalAlignment="Center">
                                <TextBlock Text="X" Foreground="Black" FontWeight="Bold" FontSize="13"/>
                            </Border>
                            <TextBox Text="{Binding XAxisLength}" Grid.Row="2" Grid.Column="1" 
                                     Style="{StaticResource ModernTextBox}" Margin="8,0,8,0" Height="32"/>
                            <TextBox Text="{Binding XAxisFeedRate}" Grid.Row="2" Grid.Column="2" 
                                     Style="{StaticResource ModernTextBox}" Margin="0,0,8,0" Height="32"/>
                            <ComboBox ItemsSource="{Binding Drivers}" SelectedItem="{Binding XAxisDriver}" 
                                      Grid.Row="2" Grid.Column="3" Margin="0,0,8,0" Height="32"
                                      Background="#1e1e1e" Foreground="White" BorderBrush="#3f3f46" Padding="8,0"/>
                            <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal">
                                <ComboBox ItemsSource="{Binding ConnectionTypes}" 
                                          SelectedItem="{Binding XAxisConnection}"
                                          Background="#1e1e1e" Foreground="White" 
                                          BorderBrush="#3f3f46" Width="100" Height="32" Padding="8,0"/>
                                <TextBlock Text="Com1" Foreground="#888" VerticalAlignment="Center" 
                                           Margin="8,0" FontSize="11"/>
                                <Button Content="âš™" Command="{Binding ConfigureXAxisCommand}" 
                                        Style="{StaticResource ModernButton}" 
                                        Width="32" Height="32" Padding="0" FontSize="14"/>
                            </StackPanel>

                            <!-- Y Axis -->
                            <Border Grid.Row="4" Grid.Column="0" Background="#00d4ff" 
                                    CornerRadius="3" Padding="8,6" HorizontalAlignment="Center">
                                <TextBlock Text="Y" Foreground="Black" FontWeight="Bold" FontSize="13"/>
                            </Border>
                            <TextBox Text="{Binding YAxisLength}" Grid.Row="4" Grid.Column="1" 
                                     Style="{StaticResource ModernTextBox}" Margin="8,0,8,0" Height="32"/>
                            <TextBox Text="{Binding YAxisFeedRate}" Grid.Row="4" Grid.Column="2" 
                                     Style="{StaticResource ModernTextBox}" Margin="0,0,8,0" Height="32"/>
                            <ComboBox ItemsSource="{Binding Drivers}" SelectedItem="{Binding YAxisDriver}" 
                                      Grid.Row="4" Grid.Column="3" Margin="0,0,8,0" Height="32"
                                      Background="#1e1e1e" Foreground="White" BorderBrush="#3f3f46" Padding="8,0"/>
                            <StackPanel Grid.Row="4" Grid.Column="4" Orientation="Horizontal">
                                <ComboBox ItemsSource="{Binding ConnectionTypes}" 
                                          SelectedItem="{Binding YAxisConnection}"
                                          Background="#1e1e1e" Foreground="White" 
                                          BorderBrush="#3f3f46" Width="100" Height="32" Padding="8,0"/>
                                <TextBlock Text="Com1" Foreground="#888" VerticalAlignment="Center" 
                                           Margin="8,0" FontSize="11"/>
                                <Button Content="âš™" Command="{Binding ConfigureYAxisCommand}" 
                                        Style="{StaticResource ModernButton}" 
                                        Width="32" Height="32" Padding="0" FontSize="14"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Display Configuration Section -->
            <GroupBox Header="Display Configuration" Style="{StaticResource EnhancedGroupBox}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Display Device Selection -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="PRINT DISPLAY DEVICE" Style="{StaticResource FieldLabel}"/>
                            <ComboBox ItemsSource="{Binding DisplayDevices}" 
                                      SelectedItem="{Binding SelectedDisplayDevice}"
                                      Background="#2d2d30" Foreground="White" 
                                      BorderBrush="#3f3f46" Height="36" Padding="10,0"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Content="â†» Refresh" 
                                Command="{Binding RefreshDisplaysCommand}" 
                                Style="{StaticResource ModernButton}" 
                                VerticalAlignment="Bottom" Margin="15,0,0,0"
                                Padding="15,8" Height="36"/>
                    </Grid>

                    <!-- Display Resolution -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="DISPLAY RESOLUTION" Style="{StaticResource SectionHeader}"/>
                        <Border Background="#2d2d30" CornerRadius="6" Padding="15" Margin="0,5,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="WIDTH (pixels)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding DisplayWidth}" 
                                             Style="{StaticResource ModernTextBox}" Height="36"/>
                                </StackPanel>
                                
                                <TextBlock Grid.Column="1" Text="Ã—" Foreground="#00d4ff" 
                                           FontSize="20" FontWeight="Bold" 
                                           VerticalAlignment="Center" HorizontalAlignment="Center" 
                                           Margin="0,15,0,0"/>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="HEIGHT (pixels)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox Text="{Binding DisplayHeight}" 
                                             Style="{StaticResource ModernTextBox}" Height="36"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Projector Serial Control Section -->
            <GroupBox Header="Projector Serial Control" Style="{StaticResource EnhancedGroupBox}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Grid.Column="0" Content="Enable Serial Control" 
                              IsChecked="{Binding ProjectorSerialEnabled}" 
                              Foreground="White" FontSize="13" VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" 
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Port:" Foreground="#b0b0b0" Margin="0,0,8,0"/>
                        <TextBlock Text="Com1" Foreground="#00d4ff" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" Content="âš™ Configure Port" 
                            Command="{Binding ConfigureProjectorCommand}" 
                            Style="{StaticResource ModernButton}" 
                            Padding="15,8" Height="36"/>
                </Grid>
            </GroupBox>

            <!-- Save Button -->
            <Border Background="#242424" CornerRadius="8" Padding="20" Margin="0,10,0,20">
                <Button Content="ðŸ’¾ Save All Changes" 
                        Command="{Binding SaveMachineConfigCommand}" 
                        Style="{StaticResource PrimaryButton}" 
                        Padding="25,12" FontSize="14" FontWeight="SemiBold"
                        HorizontalAlignment="Right"/>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>