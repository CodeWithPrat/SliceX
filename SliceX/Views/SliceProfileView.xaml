<UserControl x:Class="SliceX.Views.SliceProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1e1e1e">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- Profile Selection -->
            <GroupBox Header="Profile in Use:" Foreground="White" BorderBrush="#3f3f46" Margin="0,0,0,15">
                <StackPanel Margin="10">
                    <ComboBox ItemsSource="{Binding SliceProfiles}" 
                              SelectedItem="{Binding SelectedSliceProfile}"
                              Background="#2d2d30" Foreground="White" 
                              BorderBrush="#3f3f46" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Configured Slicing Profiles" FontWeight="Bold" 
                               Foreground="#00d4ff" Margin="0,0,0,5"/>
                    <TextBlock Text="All Profiles:" Foreground="#e0e0e0" Margin="0,0,0,5"/>
                    
                    <ListBox ItemsSource="{Binding AllSliceProfiles}" 
                             Background="#2d2d30" Foreground="White"
                             BorderBrush="#3f3f46" Height="80" Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Create" Command="{Binding CreateSliceProfileCommand}" 
                                Style="{StaticResource ModernButton}" Margin="0,0,10,0" Padding="10,5"/>
                        <Button Content="Delete" Command="{Binding DeleteSliceProfileCommand}" 
                                Style="{StaticResource ModernButton}" Padding="10,5"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Profile Configuration -->
            <GroupBox Header="Profile Configuration" Foreground="White" BorderBrush="#3f3f46" Margin="0,0,0,15">
                <TabControl>
                    <TabItem Header="Options" Style="{StaticResource ModernTabItem}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
                            <StackPanel Margin="10">

                                <!-- Basic Settings -->
                                <TextBlock Text="Profile Name" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                <TextBox Text="{Binding PrinterSettings.ProfileName}" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,10"/>

                                <TextBlock Text="Notes:" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                <TextBox Text="{Binding PrinterSettings.Notes}" Height="40" 
                                         TextWrapping="Wrap" AcceptsReturn="True"
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                                <!-- Slice Settings -->
                                <TextBlock Text="Slice Thickness (mm)" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                <TextBox Text="{Binding PrinterSettings.LayerThickness}" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,10"/>

                                <TextBlock Text="Exposure Time Per Layer (ms)" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                <TextBox Text="{Binding PrinterSettings.ExposureTime}" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                                <!-- Bottom Layers -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Bottom Layers Exposure Time (ms)" 
                                                   Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.BottomExposureTime}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="# Layers" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.BottomLayers}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Checkboxes -->
                                <CheckBox Content="Enable Anti-Aliasing" 
                                          IsChecked="{Binding PrinterSettings.EnableAntiAliasing}"
                                          Foreground="#e0e0e0" Margin="0,0,0,5"/>
                                <CheckBox Content="Export Images &amp; GCode" 
                                          IsChecked="{Binding PrinterSettings.ExportImagesAndGCode}"
                                          Foreground="#e0e0e0" Margin="0,0,0,15"/>

                                <!-- Image Export Options -->
                                <TextBlock Text="Image Slice Export Options" FontWeight="Bold" 
                                           Foreground="#00d4ff" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <RadioButton Content="Zip File" IsChecked="{Binding ExportToZip}" 
                                                 Foreground="#e0e0e0" Margin="0,0,10,0"/>
                                    <RadioButton Content="Subdirectory" IsChecked="{Binding ExportToDirectory}" 
                                                 Foreground="#e0e0e0"/>
                                </StackPanel>

                                <!-- Image Offsets -->
                                <TextBlock Text="Image Pixel Offsets" FontWeight="Bold" 
                                           Foreground="#00d4ff" Margin="0,0,0,5"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="X Offset" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.ImageOffsetX}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Y Offset" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.ImageOffsetY}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Resin Price -->
                                <TextBlock Text="Resin Price per liter" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                <TextBox Text="{Binding PrinterSettings.ResinPricePerLiter}" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                                <!-- Lift Settings -->
                                <TextBlock Text="Lift Settings" FontWeight="Bold" 
                                           Foreground="#00d4ff" Margin="0,0,0,5"/>
                                
                                <CheckBox Content="Use Main-Lift GCode instead of Lift and Sequence" 
                                          IsChecked="{Binding UseMainLiftGCode}" 
                                          Foreground="#e0e0e0" Margin="0,0,0,10"/>

                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Lift and Sequence Time (ms)" 
                                                   Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.LiftSequenceTime}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Auto Calc" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <CheckBox IsChecked="{Binding AutoCalcLiftTime}" 
                                                  Foreground="#e0e0e0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Z Lift Settings -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Z Lift Distance (mm)" 
                                                   Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.LiftHeight}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Build Direction" 
                                                   Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <ComboBox ItemsSource="{Binding BuildDirections}" 
                                                  SelectedItem="{Binding PrinterSettings.BuildDirection}"
                                                  Background="#2d2d30" Foreground="White" 
                                                  BorderBrush="#3f3f46"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Speed Settings -->
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Z Lift Speed (mm/m)" 
                                                   Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.LiftSpeed}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Z Lift Retract Speed (mm/m)" 
                                                   Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                        <TextBox Text="{Binding PrinterSettings.RetractSpeed}" 
                                                 Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Slide/Tilt -->
                                <TextBlock Text="Slide / Tilt Value" Foreground="#e0e0e0" Margin="0,0,0,2"/>
                                <TextBox Text="{Binding PrinterSettings.SlideTiltValue}" 
                                         Style="{StaticResource ModernTextBox}" Margin="0,0,0,15"/>

                                <!-- Image Reflection -->
                                <TextBlock Text="Image Reflection" FontWeight="Bold" 
                                           Foreground="#00d4ff" Margin="0,0,0,5"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <CheckBox Content="Reflect X" IsChecked="{Binding PrinterSettings.ReflectX}" 
                                              Foreground="#e0e0e0" Margin="0,0,10,0"/>
                                    <CheckBox Content="Reflect Y" IsChecked="{Binding PrinterSettings.ReflectY}" 
                                              Foreground="#e0e0e0"/>
                                </StackPanel>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Header="GCode" Style="{StaticResource ModernTabItem}">
                        <StackPanel Margin="10">
                            <TextBlock Text="GCode Configuration" Foreground="White" FontSize="14" 
                                       FontWeight="Bold" Margin="0,0,0,10"/>
                            <TextBlock Text="GCode settings will be implemented here..." 
                                       Foreground="#e0e0e0"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </GroupBox>

            <!-- Apply Button -->
            <Button Content="Apply" Command="{Binding ApplySliceProfileCommand}" 
                    Style="{StaticResource PrimaryButton}" Padding="15,8" 
                    HorizontalAlignment="Right"/>

        </StackPanel>
    </ScrollViewer>
</UserControl>