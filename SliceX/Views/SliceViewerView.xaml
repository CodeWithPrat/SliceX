<UserControl x:Class="SliceX.Views.SliceViewerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#1e1e1e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" Padding="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Slice Viewer - Layer " Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding CurrentLayerNumber}" Foreground="#00d4ff" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text=" of " Foreground="White" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding TotalLayers}" Foreground="#00d4ff" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Image Display -->
        <Border Grid.Row="1" Background="#252526" Margin="10" CornerRadius="5">
            <Image Source="{Binding CurrentLayerImage}" 
                   Stretch="Uniform" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
        </Border>

        <!-- Navigation Controls -->
        <Border Grid.Row="2" Background="#252526" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="⏮ First" Command="{Binding FirstLayerCommand}" 
                        Style="{StaticResource ModernButton}" Margin="5" Padding="10,5"/>
                <Button Content="⏪ Previous" Command="{Binding PreviousLayerCommand}" 
                        Style="{StaticResource ModernButton}" Margin="5" Padding="10,5"/>
                
                <TextBox Text="{Binding CurrentLayerNumber}" Width="50" 
                         Style="{StaticResource ModernTextBox}" Margin="10,0" 
                         VerticalAlignment="Center"/>
                <TextBlock Text="/" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding TotalLayers}" Foreground="White" VerticalAlignment="Center"/>
                
                <Button Content="⏩ Next" Command="{Binding NextLayerCommand}" 
                        Style="{StaticResource ModernButton}" Margin="5" Padding="10,5"/>
                <Button Content="⏭ Last" Command="{Binding LastLayerCommand}" 
                        Style="{StaticResource ModernButton}" Margin="5" Padding="10,5"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>