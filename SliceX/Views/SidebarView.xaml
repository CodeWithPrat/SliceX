<UserControl x:Class="SliceX.Views.SidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:SliceX.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="400">

    <UserControl.Resources>
        <!-- Luxury Metallic Silver Gradient -->
        <LinearGradientBrush x:Key="MetallicSilver" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#E8E8E8" Offset="0"/>
            <GradientStop Color="#C0C0C0" Offset="0.5"/>
            <GradientStop Color="#A8A8A8" Offset="1"/>
        </LinearGradientBrush>

        <!-- Dark Metallic Gradient -->
        <LinearGradientBrush x:Key="DarkMetallic" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1a1a1a" Offset="0"/>
            <GradientStop Color="#0d0d0d" Offset="1"/>
        </LinearGradientBrush>

        <!-- Silver Shine Effect -->
        <LinearGradientBrush x:Key="SilverShine" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#40FFFFFF" Offset="0"/>
            <GradientStop Color="#80FFFFFF" Offset="0.5"/>
            <GradientStop Color="#40FFFFFF" Offset="1"/>
        </LinearGradientBrush>

        <!-- Luxury Button Base Style -->
        <Style x:Key="LuxuryButtonBase" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#E8E8E8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <!-- Main Button Border -->
                            <Border x:Name="BorderOuter" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#404040"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" 
                                                      BlurRadius="8" 
                                                      ShadowDepth="2" 
                                                      Opacity="0.6"/>
                                </Border.Effect>
                                
                                <!-- Inner Glow Border -->
                                <Border x:Name="BorderInner"
                                        BorderBrush="#30FFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="5"
                                        Opacity="0.3">
                                    
                                    <!-- Content with Shine Overlay -->
                                    <Grid>
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          TextBlock.FontWeight="{TemplateBinding FontWeight}"/>
                                        
                                        <!-- Shine Effect Overlay -->
                                        <Border x:Name="ShineOverlay"
                                                Background="{StaticResource SilverShine}"
                                                CornerRadius="5"
                                                Opacity="0"
                                                IsHitTestVisible="False"/>
                                    </Grid>
                                </Border>
                            </Border>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ShineOverlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.15" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="BorderOuter"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#606060" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ShineOverlay"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.2"/>
                                            <ColorAnimation Storyboard.TargetName="BorderOuter"
                                                            Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                            To="#404040" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="BorderOuter" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            
                            <!-- Disabled State -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Standard Luxury Button -->
        <Style x:Key="LuxuryButton" TargetType="Button" BasedOn="{StaticResource LuxuryButtonBase}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#2a2a2a" Offset="0"/>
                        <GradientStop Color="#1a1a1a" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Silver Button -->
        <Style x:Key="PrimarySilverButton" TargetType="Button" BasedOn="{StaticResource LuxuryButtonBase}">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#505050" Offset="0"/>
                        <GradientStop Color="#383838" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Luxury Button -->
        <Style x:Key="DangerLuxuryButton" TargetType="Button" BasedOn="{StaticResource LuxuryButtonBase}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#8B0000" Offset="0"/>
                        <GradientStop Color="#5a0000" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#FFD0D0"/>
        </Style>

        <!-- Luxury TextBox -->
        <Style x:Key="LuxuryTextBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#E8E8E8"/>
            <Setter Property="CaretBrush" Value="#C0C0C0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="#0d0d0d"
                                BorderBrush="#404040"
                                BorderThickness="1"
                                CornerRadius="4">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="2" Opacity="0.4" Direction="270"/>
                            </Border.Effect>
                            <Border BorderBrush="#202020"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                              Margin="{TemplateBinding Padding}"
                                              VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Luxury Slider -->
        <Style x:Key="LuxurySlider" TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource MetallicSilver}"/>
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Track -->
                            <Border x:Name="TrackBackground" 
                                    Grid.Row="1"
                                    Height="6" 
                                    Background="#0d0d0d"
                                    BorderBrush="#404040"
                                    BorderThickness="1"
                                    CornerRadius="3"
                                    Margin="5,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.5" Direction="270"/>
                                </Border.Effect>
                                
                                <!-- Progress Fill -->
                                <Border x:Name="PART_SelectionRange"
                                        Background="{StaticResource MetallicSilver}"
                                        CornerRadius="3"
                                        HorizontalAlignment="Left"/>
                            </Border>
                            
                            <!-- Thumb -->
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Ellipse Width="18" Height="18"
                                                             Fill="{StaticResource MetallicSilver}"
                                                             Stroke="#606060"
                                                             StrokeThickness="2">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.6"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                    <Ellipse Width="8" Height="8"
                                                             Fill="#FFFFFF"
                                                             Opacity="0.6"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Luxury TabItem -->
        <Style x:Key="LuxuryTabItem" TargetType="TabItem">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid x:Name="TabGrid">
                            <Border x:Name="TabBorder"
                                    Background="#1a1a1a"
                                    BorderBrush="#303030"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0"
                                    Padding="14,8"
                                    Margin="2,0,2,0">
                                <ContentPresenter ContentSource="Header"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3a3a3a" Offset="0"/>
                                            <GradientStop Color="#2a2a2a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="TabBorder" Property="BorderBrush" Value="#606060"/>
                                <Setter Property="Foreground" Value="#E8E8E8"/>
                                <Setter TargetName="TabBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#80FFFFFF" BlurRadius="8" ShadowDepth="0" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabBorder" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="#C0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Luxury GroupBox -->
        <Style x:Key="LuxuryGroupBox" TargetType="GroupBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#C0C0C0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Border Background="#0d0d0d"
                                    BorderBrush="#404040"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="12">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
                                </Border.Effect>
                                
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Header with Silver Accent -->
                                    <Border Grid.Row="0" 
                                            Background="#1a1a1a"
                                            BorderBrush="{StaticResource MetallicSilver}"
                                            BorderThickness="0,0,0,1"
                                            Padding="8,6"
                                            Margin="0,0,0,10"
                                            CornerRadius="4,4,0,0">
                                        <ContentPresenter ContentSource="Header"
                                                          TextBlock.Foreground="{StaticResource MetallicSilver}"
                                                          TextBlock.FontWeight="SemiBold"/>
                                    </Border>
                                    
                                    <!-- Content -->
                                    <ContentPresenter Grid.Row="1"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Main Background with Subtle Gradient -->
    <Border Background="{StaticResource DarkMetallic}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="18">

                <!-- File Menu -->
                <GroupBox Header="ðŸ“ FILE OPERATIONS" Style="{StaticResource LuxuryGroupBox}" Margin="0,0,0,18">
                    <StackPanel>
                        <Button Content="LOAD MODEL" Command="{Binding LoadModelCommand}" 
                                Style="{StaticResource LuxuryButton}" Margin="0,3" Padding="12,8"/>
                        <Button Content="UNLOAD MODEL" Command="{Binding UnloadModelCommand}" 
                                Style="{StaticResource DangerLuxuryButton}" Margin="0,3" Padding="12,8"
                                IsEnabled="{Binding IsModelLoaded}"/>
                        <Button Content="SAVE PROFILE" Command="{Binding SaveProfileCommand}" 
                                Style="{StaticResource LuxuryButton}" Margin="0,3" Padding="12,8"/>
                        <Button Content="LOAD PROFILE" Command="{Binding LoadProfileCommand}" 
                                Style="{StaticResource LuxuryButton}" Margin="0,3" Padding="12,8"/>
                        <Button Content="ESTIMATE VOLUME and COST" Command="{Binding EstimateVolumeAndCostCommand}" 
                                Style="{StaticResource LuxuryButton}" Margin="0,3" Padding="12,8"/>
                        <Button Content="PREFERENCES" Command="{Binding ShowPreferencesCommand}" 
                                Style="{StaticResource LuxuryButton}" Margin="0,3" Padding="12,8"/>
                        <Button Content="EXIT APPLICATION" Command="{Binding ExitCommand}" 
                                Style="{StaticResource LuxuryButton}" Margin="0,3" Padding="12,8"/>
                    </StackPanel>
                </GroupBox>

                <!-- View Menu -->
                <GroupBox Header="ðŸ‘ï¸ CAMERA VIEWS" Style="{StaticResource LuxuryGroupBox}" Margin="0,0,0,18">
                    <UniformGrid Rows="2" Columns="2" Margin="4">
                        <Button Content="TOP VIEW" Command="{Binding TopViewCommand}" 
                                Style="{StaticResource PrimarySilverButton}" Margin="4" Padding="12,10"/>
                        <Button Content="FRONT VIEW" Command="{Binding FrontViewCommand}" 
                                Style="{StaticResource PrimarySilverButton}" Margin="4" Padding="12,10"/>
                        <Button Content="SIDE VIEW" Command="{Binding SideViewCommand}" 
                                Style="{StaticResource PrimarySilverButton}" Margin="4" Padding="12,10"/>
                        <Button Content="RESET VIEW" Command="{Binding ResetViewCommand}" 
                                Style="{StaticResource PrimarySilverButton}" Margin="4" Padding="12,10"/>
                    </UniformGrid>
                </GroupBox>

                <!-- Transformation Tabs -->
                <GroupBox Header="ðŸ› ï¸ TRANSFORMATIONS" Style="{StaticResource LuxuryGroupBox}" Margin="0,0,0,18">
                    <TabControl SelectedIndex="{Binding SelectedTabIndex}" 
                                Background="Transparent"
                                BorderThickness="0">

                        <!-- Move Tab -->
                        <TabItem Header="MOVE" Style="{StaticResource LuxuryTabItem}">
                            <Border Background="#1a1a1a" Padding="12" CornerRadius="0,0,6,6">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,8" HorizontalAlignment="Center">
                                        <Button Content="CENTER MODEL" Command="{Binding CenterModelCommand}" 
                                                Style="{StaticResource PrimarySilverButton}" Margin="4" Padding="14,8"/>
                                        <Button Content="PLACE ON PLATFORM" Command="{Binding PlaceOnPlatformCommand}" 
                                                Style="{StaticResource PrimarySilverButton}" Margin="4" Padding="14,8"/>
                                    </StackPanel>

                                    <TextBlock Text="MOVE INCREMENT (MM)" Foreground="{StaticResource MetallicSilver}" 
                                               FontWeight="SemiBold" FontSize="11" Margin="0,12,0,6"/>
                                    <TextBox Text="{Binding MoveStep}" Style="{StaticResource LuxuryTextBox}" Margin="0,0,0,16"/>

                                    <!-- X Axis -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="X AXIS TRANSLATION" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="11" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="â—„ Xâˆ’" Command="{Binding MoveXMinusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                                <TextBlock Text="{Binding MoveStep, StringFormat={}{0} mm}" 
                                                           Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="13"
                                                           VerticalAlignment="Center" Margin="16,0" MinWidth="60" TextAlignment="Center"/>
                                                <Button Content="X+ â–º" Command="{Binding MoveXPlusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Y Axis -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="Y AXIS TRANSLATION" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="11" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="â—„ Yâˆ’" Command="{Binding MoveYMinusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                                <TextBlock Text="{Binding MoveStep, StringFormat={}{0} mm}" 
                                                           Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="13"
                                                           VerticalAlignment="Center" Margin="16,0" MinWidth="60" TextAlignment="Center"/>
                                                <Button Content="Y+ â–º" Command="{Binding MoveYPlusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Z Axis -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="Z AXIS TRANSLATION" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="11" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="â—„ Zâˆ’" Command="{Binding MoveZMinusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                                <TextBlock Text="{Binding MoveStep, StringFormat={}{0} mm}" 
                                                           Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="13"
                                                           VerticalAlignment="Center" Margin="16,0" MinWidth="60" TextAlignment="Center"/>
                                                <Button Content="Z+ â–º" Command="{Binding MoveZPlusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </TabItem>

                        <!-- Rotate Tab -->
                        <TabItem Header="ROTATE" Style="{StaticResource LuxuryTabItem}">
                            <Border Background="#1a1a1a" Padding="12" CornerRadius="0,0,6,6">
                                <StackPanel>
                                    <TextBlock Text="ROTATION INCREMENT (DEGREES)" Foreground="{StaticResource MetallicSilver}" 
                                               FontWeight="SemiBold" FontSize="11" Margin="0,8,0,6"/>
                                    <TextBox Text="{Binding RotateStep}" Style="{StaticResource LuxuryTextBox}" Margin="0,0,0,16"/>

                                    <!-- X Rotation -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="X AXIS ROTATION" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="11" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="â†» Xâˆ’" Command="{Binding RotateXMinusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                                <TextBlock Text="{Binding RotateStep, StringFormat={}{0}Â°}" 
                                                           Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="13"
                                                           VerticalAlignment="Center" Margin="16,0" MinWidth="60" TextAlignment="Center"/>
                                                <Button Content="X+ â†º" Command="{Binding RotateXPlusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Y Rotation -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="Y AXIS ROTATION" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="11" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="â†» Yâˆ’" Command="{Binding RotateYMinusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                                <TextBlock Text="{Binding RotateStep, StringFormat={}{0}Â°}" 
                                                           Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="13"
                                                           VerticalAlignment="Center" Margin="16,0" MinWidth="60" TextAlignment="Center"/>
                                                <Button Content="Y+ â†º" Command="{Binding RotateYPlusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>

                                    <!-- Z Rotation -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="Z AXIS ROTATION" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="11" Margin="0,0,0,8"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                <Button Content="â†» Zâˆ’" Command="{Binding RotateZMinusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                                <TextBlock Text="{Binding RotateStep, StringFormat={}{0}Â°}" 
                                                           Foreground="#E8E8E8" FontWeight="SemiBold" FontSize="13"
                                                           VerticalAlignment="Center" Margin="16,0" MinWidth="60" TextAlignment="Center"/>
                                                <Button Content="Z+ â†º" Command="{Binding RotateZPlusCommand}" 
                                                        Style="{StaticResource LuxuryButton}" Margin="4" Padding="18,10" MinWidth="80"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </TabItem>

                        <!-- Scale Tab -->
                        <TabItem Header="SCALE" Style="{StaticResource LuxuryTabItem}">
                            <Border Background="#1a1a1a" Padding="12" CornerRadius="0,0,6,6">
                                <StackPanel>
                                    <!-- Uniform Scaling -->
                                    <Border Background="#0d0d0d" BorderBrush="#404040" BorderThickness="1" 
                                            CornerRadius="4" Padding="12" Margin="0,8,0,16">
                                        <StackPanel>
                                            <TextBlock Text="UNIFORM SCALING" FontWeight="Bold" 
                                                       Foreground="{StaticResource MetallicSilver}" 
                                                       FontSize="12" Margin="0,0,0,10"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding ScaleValue}" 
                                                         Style="{StaticResource LuxuryTextBox}" 
                                                         VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                <Button Grid.Column="1" Content="APPLY SCALE" 
                                                        Command="{Binding ScaleUniformCommand}" 
                                                        Style="{StaticResource PrimarySilverButton}" 
                                                        Padding="20,8" MinWidth="120"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="INDIVIDUAL AXIS SCALING" FontWeight="Bold" 
                                               Foreground="{StaticResource MetallicSilver}" 
                                               FontSize="11" Margin="0,0,0,12" TextAlignment="Center"/>

                                    <!-- X Scale -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="X AXIS SCALE" Foreground="#B0B0B0" 
                                                       FontWeight="SemiBold" FontSize="10" Margin="0,0,0,6"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding ScaleX}" 
                                                         Style="{StaticResource LuxuryTextBox}" 
                                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <Button Grid.Column="1" Content="SCALE X" 
                                                        Command="{Binding ScaleXAxisCommand}" 
                                                        Style="{StaticResource LuxuryButton}" 
                                                        Padding="16,6" MinWidth="90"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Y Scale -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Y AXIS SCALE" Foreground="#B0B0B0" 
                                                       FontWeight="SemiBold" FontSize="10" Margin="0,0,0,6"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding ScaleY}" 
                                                         Style="{StaticResource LuxuryTextBox}" 
                                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <Button Grid.Column="1" Content="SCALE Y" 
                                                        Command="{Binding ScaleYAxisCommand}" 
                                                        Style="{StaticResource LuxuryButton}" 
                                                        Padding="16,6" MinWidth="90"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>

                                    <!-- Z Scale -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="10">
                                        <StackPanel>
                                            <TextBlock Text="Z AXIS SCALE" Foreground="#B0B0B0" 
                                                       FontWeight="SemiBold" FontSize="10" Margin="0,0,0,6"/>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBox Grid.Column="0" Text="{Binding ScaleZ}" 
                                                         Style="{StaticResource LuxuryTextBox}" 
                                                         VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <Button Grid.Column="1" Content="SCALE Z" 
                                                        Command="{Binding ScaleZAxisCommand}" 
                                                        Style="{StaticResource LuxuryButton}" 
                                                        Padding="16,6" MinWidth="90"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </TabItem>

                        <!-- View Settings Tab -->
                        <TabItem Header="VIEW" Style="{StaticResource LuxuryTabItem}">
                            <Border Background="#1a1a1a" Padding="12" CornerRadius="0,0,6,6">
                                <StackPanel>
                                    <TextBlock Text="MOUSE SENSITIVITY CONTROLS" FontWeight="Bold" 
                                               Foreground="{StaticResource MetallicSilver}" 
                                               FontSize="12" Margin="0,8,0,16" TextAlignment="Center"/>

                                    <!-- Rotation Sensitivity -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="12" Margin="0,0,0,12">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <TextBlock Text="ROTATION SENSITIVITY" 
                                                           Foreground="#B0B0B0" FontWeight="SemiBold" 
                                                           FontSize="10" HorizontalAlignment="Left"/>
                                                <TextBlock Text="{Binding RotationSensitivity, StringFormat={}{0:F1}x}" 
                                                           Foreground="{StaticResource MetallicSilver}" 
                                                           FontWeight="Bold" FontSize="11" HorizontalAlignment="Right"/>
                                            </Grid>
                                            <Slider Value="{Binding RotationSensitivity}" 
                                                    Minimum="0.1" Maximum="3.0" 
                                                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                    Style="{StaticResource LuxurySlider}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Pan Sensitivity -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="12" Margin="0,0,0,12">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <TextBlock Text="PAN SENSITIVITY" 
                                                           Foreground="#B0B0B0" FontWeight="SemiBold" 
                                                           FontSize="10" HorizontalAlignment="Left"/>
                                                <TextBlock Text="{Binding PanSensitivity, StringFormat={}{0:F1}x}" 
                                                           Foreground="{StaticResource MetallicSilver}" 
                                                           FontWeight="Bold" FontSize="11" HorizontalAlignment="Right"/>
                                            </Grid>
                                            <Slider Value="{Binding PanSensitivity}" 
                                                    Minimum="0.1" Maximum="3.0" 
                                                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                    Style="{StaticResource LuxurySlider}"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Zoom Sensitivity -->
                                    <Border Background="#0d0d0d" BorderBrush="#303030" BorderThickness="1" 
                                            CornerRadius="4" Padding="12">
                                        <StackPanel>
                                            <Grid Margin="0,0,0,8">
                                                <TextBlock Text="ZOOM SENSITIVITY" 
                                                           Foreground="#B0B0B0" FontWeight="SemiBold" 
                                                           FontSize="10" HorizontalAlignment="Left"/>
                                                <TextBlock Text="{Binding ZoomSensitivity, StringFormat={}{0:F1}x}" 
                                                           Foreground="{StaticResource MetallicSilver}" 
                                                           FontWeight="Bold" FontSize="11" HorizontalAlignment="Right"/>
                                            </Grid>
                                            <Slider Value="{Binding ZoomSensitivity}" 
                                                    Minimum="0.1" Maximum="3.0" 
                                                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                                                    Style="{StaticResource LuxurySlider}"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </TabItem>
                    </TabControl>
                </GroupBox>

                <!-- Premium Slice Button with Shine Effect -->
                <Border Background="#0d0d0d" 
                        BorderBrush="{StaticResource MetallicSilver}"
                        BorderThickness="2"
                        CornerRadius="8"
                        Padding="2">
                    <Border.Effect>
                        <DropShadowEffect Color="#80FFFFFF" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    
                    <Button Command="{Binding SliceModelCommand}" 
                            IsEnabled="{Binding IsModelLoaded}"
                            Cursor="Hand"
                            FontFamily="Segoe UI"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#FFFFFF"
                            BorderThickness="0"
                            Padding="0,16">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid>
                                    <Border x:Name="MainBorder"
                                            CornerRadius="6">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#505050" Offset="0"/>
                                                <GradientStop Color="#383838" Offset="0.5"/>
                                                <GradientStop Color="#505050" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.7"/>
                                        </Border.Effect>
                                        
                                        <Grid>
                                            <!-- Animated Shine Overlay -->
                                            <Border x:Name="ShineOverlay"
                                                    Background="{StaticResource SilverShine}"
                                                    CornerRadius="6"
                                                    Opacity="0.2"
                                                    IsHitTestVisible="False"/>
                                            
                                            <!-- Button Content -->
                                            <StackPanel Orientation="Horizontal" 
                                                        HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="ðŸ”ª" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="SLICE MODEL" 
                                                           FontSize="16" 
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </Grid>
                                
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ShineOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0.4" Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="ShineOverlay"
                                                                     Storyboard.TargetProperty="Opacity"
                                                                     To="0.2" Duration="0:0:0.3"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                    
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="MainBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.8"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>